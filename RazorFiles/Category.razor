@inject ISnackbar Snackbar
<MudContainer Class="mt-16" MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Product Details</MudText>
    <MudGrid Spacing="6" Class="mt-3">
        <MudItem xs="12">
            <MudText Typo="Typo.h5" GutterBottom="true">Category </MudText>
            <MudGrid>
                <MudItem xs="6">
                    <MudTextField T="string" Label="Category Id" />
                </MudItem>
                <MudItem xs="6">
                    <MudTextField T="string" Label="Category Name" />
                </MudItem>
                <MudItem xs="12" Class="d-flex justify-center">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Size="Size.Large"
                               Class="mt-8"
                               OnClick="Save">
                        Save
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudItem>

    </MudGrid>
</MudContainer>
@code {

    async Task Save()
    {
        Snackbar.Add("Feature not implemented", Severity.Info);
        await Task.CompletedTask;
    }
}